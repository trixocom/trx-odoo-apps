<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View -->
    <record id="llm_model_view_form_inherit_generate" model="ir.ui.view">
        <field name="name">llm.model.form.inherit.generate</field>
        <field name="model">llm.model</field>
        <field name="inherit_id" ref="llm.llm_model_view_form" />
        <field name="arch" type="xml">
            <!-- Add Generation Schema info as full-width section after all form inputs -->
            <xpath expr="//sheet/group" position="after">
                <div
          class="alert alert-info mt-3"
          role="alert"
          invisible="model_use not in ['generation', 'image_generation']"
        >
                    <h5>Generation Schema Configuration</h5>
                    <p>For generation models, add <code
            >input_schema</code> and <code
            >output_schema</code> keys to the details JSON field above.</p>
                    <p><strong>Example:</strong></p>
                    <pre>{
  "input_schema": {
    "type": "object",
    "properties": {
      "prompt": {"type": "string", "description": "The prompt to generate from"},
      "size": {"type": "string", "enum": ["256x256", "512x512", "1024x1024"]}
    },
    "required": ["prompt"]
  },
  "output_schema": {
    "type": "array",
    "items": {"type": "string", "format": "uri"}
  }
}</pre>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
