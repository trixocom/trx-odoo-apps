<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- MCP Session List View -->
    <record id="llm_mcp_session_view_list" model="ir.ui.view">
        <field name="name">llm.mcp.session.view.list</field>
        <field name="model">llm.mcp.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="session_id" />
                <field name="state" />
                <field name="user_id" />
                <field name="create_date" />
                <field name="write_date" />
            </list>
        </field>
    </record>

    <!-- MCP Session Form View -->
    <record id="llm_mcp_session_view_form" model="ir.ui.view">
        <field name="name">llm.mcp.session.view.form</field>
        <field name="model">llm.mcp.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="session_id" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="state" />
                            <field name="user_id" />
                        </group>
                        <group>
                            <field name="create_date" readonly="1" />
                            <field name="write_date" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Client Information" name="client_info">
                            <group>
                                <field name="protocol_version" />
                                <field name="client_info" widget="jsonb" />
                                <field
                  name="client_capabilities"
                  widget="jsonb"
                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- MCP Session Action -->
    <record id="llm_mcp_session_action" model="ir.actions.act_window">
        <field name="name">MCP Sessions</field>
        <field name="res_model">llm.mcp.session</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No MCP sessions found
            </p>
            <p>
                MCP sessions are created automatically when clients connect to the server.
            </p>
        </field>
    </record>

    <!-- Menu Item under LLM Configuration -->
    <menuitem
    id="menu_llm_mcp_session"
    name="MCP Sessions"
    action="llm_mcp_session_action"
    parent="llm.menu_llm_config"
    sequence="55"
  />

</odoo>
