<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Dataset Form View -->
    <record id="llm_training_dataset_view_form" model="ir.ui.view">
        <field name="name">llm.training.dataset.view.form</field>
        <field name="model">llm.training.dataset</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              name="toggle_active"
              type="object"
              class="oe_stat_button"
              icon="fa-archive"
            >
                            <field
                name="active"
                widget="boolean_toggle"
                options="{'terminology': 'archive'}"
              />
                        </button>
                        <button
              name="action_validate_dataset"
              type="object"
              string="Validate"
              class="oe_stat_button"
              icon="fa-check"
            />
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dataset Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="file_count" />
                            <field name="example_count" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field
                name="description"
                placeholder="Dataset description..."
                nolabel="1"
              />
                        </page>
                        <page string="Dataset Files" name="files">
                            <field
                name="attachment_ids"
                widget="many2many_binary"
                string="Upload Dataset Files"
              />
                        </page>
                        <page
              string="Training Jobs"
              name="jobs"
              invisible="not job_ids"
            >
                            <field name="job_ids">
                                <list>
                                    <field name="name" />
                                    <field name="provider_id" />
                                    <field name="base_model_id" />
                                    <field name="state" />
                                    <field name="estimated_cost" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Dataset Tree View -->
    <record id="llm_training_dataset_view_tree" model="ir.ui.view">
        <field name="name">llm.training.dataset.view.tree</field>
        <field name="model">llm.training.dataset</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="file_count" />
                <field name="example_count" />
                <field name="active" invisible="1" />
            </list>
        </field>
    </record>

    <!-- Dataset Search View -->
    <record id="llm_training_dataset_view_search" model="ir.ui.view">
        <field name="name">llm.training.dataset.view.search</field>
        <field name="model">llm.training.dataset</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
          string="Archived"
          name="inactive"
          domain="[('active', '=', False)]"
        />
            </search>
        </field>
    </record>

    <!-- Dataset Action -->
    <record id="llm_training_dataset_action" model="ir.actions.act_window">
        <field name="name">LLM Training Datasets</field>
        <field name="res_model">llm.training.dataset</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first training dataset!
            </p>
            <p>
                Upload JSON/JSONL files with training examples to fine-tune LLM models.
            </p>
        </field>
    </record>
</odoo>
