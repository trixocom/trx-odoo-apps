<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Job Form View -->
    <record id="llm_training_job_view_form" model="ir.ui.view">
        <field name="name">llm.training.job.view.form</field>
        <field name="model">llm.training.job</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="action_submit"
            type="object"
            string="Submit"
            class="oe_highlight"
            invisible="state != 'draft'"
          />
                    <button
            name="action_check_status"
            type="object"
            string="Check Status"
            invisible="state in ['draft', 'cancelled', 'failed', 'completed']"
          />
                    <button
            name="action_cancel"
            type="object"
            string="Cancel"
            invisible="state in ['completed', 'failed', 'cancelled', 'draft']"
          />
                    <field
            name="state"
            widget="statusbar"
            statusbar_visible="draft,validating,preparing,queued,training,completed"
          />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              name="toggle_active"
              type="object"
              class="oe_stat_button"
              icon="fa-archive"
            >
                            <field
                name="active"
                widget="boolean_toggle"
                options="{'terminology': 'archive'}"
              />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Job Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                name="provider_id"
                options="{'no_create': True}"
                readonly="state != 'draft'"
              />
                            <field
                name="base_model_id"
                options="{'no_create': True}"
                readonly="state != 'draft'"
              />
                            <field
                name="trained_model_name"
                readonly="state != 'draft'"
              />
                        </group>
                        <group>
                            <field name="estimated_cost" widget="monetary" />
                            <field
                name="final_cost"
                widget="monetary"
                invisible="state != 'completed'"
              />
                            <field
                name="external_job_id"
                invisible="not external_job_id"
              />
                        </group>
                    </group>
                    <notebook>
                        <page string="Datasets" name="datasets">
                            <field
                name="dataset_ids"
                readonly="state != 'draft'"
              >
                                <list>
                                    <field name="name" />
                                    <field name="file_count" />
                                    <field name="example_count" />
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field
                name="description"
                placeholder="Job description..."
                nolabel="1"
              />
                        </page>
                        <page string="Hyperparameters" name="hyperparameters">
                            <field
                name="hyperparameters"
                widget="json_editor"
                readonly="state != 'draft'"
              />
                        </page>
                        <page
              string="Results"
              name="results"
              invisible="state not in ['completed', 'failed']"
            >
                            <group>
                                <field
                  name="result_model_id"
                  invisible="not result_model_id"
                />
                                <field
                  name="training_metrics"
                  widget="json_editor"
                  invisible="not training_metrics"
                />
                            </group>
                            <group
                string="Training Logs"
                invisible="not training_logs"
              >
                                <field name="training_logs" nolabel="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Job Tree View -->
    <record id="llm_training_job_view_tree" model="ir.ui.view">
        <field name="name">llm.training.job.view.tree</field>
        <field name="model">llm.training.job</field>
        <field name="arch" type="xml">
            <list
        decoration-info="state in ('draft', 'validating', 'preparing')"
        decoration-primary="state in ('queued', 'training')"
        decoration-success="state == 'completed'"
        decoration-danger="state == 'failed'"
        decoration-muted="state == 'cancelled'"
      >
                <field name="name" />
                <field name="provider_id" />
                <field name="base_model_id" />
                <field name="state" />
                <field name="estimated_cost" />
                <field name="active" invisible="1" />
            </list>
        </field>
    </record>

    <!-- Job Search View -->
    <record id="llm_training_job_view_search" model="ir.ui.view">
        <field name="name">llm.training.job.view.search</field>
        <field name="model">llm.training.job</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="provider_id" />
                <field name="base_model_id" />
                <separator />
                <filter
          string="Draft"
          name="draft"
          domain="[('state', '=', 'draft')]"
        />
                <filter
          string="In Progress"
          name="in_progress"
          domain="[('state', 'in', ('validating', 'preparing', 'queued', 'training'))]"
        />
                <filter
          string="Completed"
          name="completed"
          domain="[('state', '=', 'completed')]"
        />
                <filter
          string="Failed"
          name="failed"
          domain="[('state', '=', 'failed')]"
        />
                <filter
          string="Cancelled"
          name="cancelled"
          domain="[('state', '=', 'cancelled')]"
        />
                <filter
          string="Archived"
          name="inactive"
          domain="[('active', '=', False)]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Provider"
            name="group_by_provider"
            context="{'group_by': 'provider_id'}"
          />
                    <filter
            string="Base Model"
            name="group_by_model"
            context="{'group_by': 'base_model_id'}"
          />
                    <filter
            string="Status"
            name="group_by_state"
            context="{'group_by': 'state'}"
          />
                </group>
            </search>
        </field>
    </record>

    <!-- Job Action -->
    <record id="llm_training_job_action" model="ir.actions.act_window">
        <field name="name">LLM Training Jobs</field>
        <field name="res_model">llm.training.job</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first training job!
            </p>
            <p>
                Configure fine-tuning jobs to train custom LLM models.
            </p>
        </field>
    </record>
</odoo>
